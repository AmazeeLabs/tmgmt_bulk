/**
 * Returns TMGMTBulkSelector plugin for the TMGMT source plugin.
 *
 * @param string $source_plugin
 *   The machine name of the TMGMT source plugin.
 *
 * @return TMGMTBulkSelectorInterface|null
 */
function _tmgmt_bulk_get_selector($source_plugin) {
  $cache =& drupal_static(__FUNCTION__, array());
  if (!array_key_exists($source_plugin, $cache)) {
    $cache[$source_plugin] = NULL;
    $class = 'TMGMTBulkSelector_' . $source_plugin;
    if (class_exists($class)
        && in_array('TMGMTBulkSelectorInterface', (array) class_implements($class, TRUE), TRUE)
        && in_array('TMGMTBulkSelector', (array) class_parents($class, TRUE), TRUE)) {
      $cache[$source_plugin] = new $class;
    }
  }
  return $cache[$source_plugin];
}
